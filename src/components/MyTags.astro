---

const allPosts = await Astro.glob("../pages/blogs/*.md");

const uniqueTags = [
  ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];

---

<footer>
  <ul>
    <li><a href="/">Home</a></li>
    {uniqueTags.map((tag) => <a href={"/tags/"+tag}><li>{tag}</li></a>)}
  </ul>
  <div>
    <p>&copy; 2024 Renato Sanchez. All rights reserved.</p>
  </div>
</footer>

<style>
  footer {
    font-family: "Inter", "Courier New", Courier, monospace;
    flex-direction: column;
    display: flex;
    gap: 0.5em;
    margin: 1em 0.5em;
    padding-bottom: 20em;
  }
  div {
    margin: auto 0 auto auto;
  }
  a{
    color: var(--primary-color);
  }
  ul {
    display: flex;
    margin: auto 0 auto auto;
    text-decoration: none;
    list-style: none;
    gap: 0.5em;
    padding: 0;
    justify-content: center;
    flex-wrap: wrap;
  }
  li {
    background: var(--select-bg-color);
    padding: 0.5em;    border-radius: 8px;
  }
  li:hover {
    cursor: pointer;
    text-decoration: underline;
  }
</style>
