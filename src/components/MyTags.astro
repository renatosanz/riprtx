---
import { tags } from "../blogContent/tableContent.js";

const allPosts = await Astro.glob("../pages/blogs/*.md");

const uniqueTags = [
  ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];


---

<footer>
  <ul>
    <li><a href="/">Home</a></li>
    {uniqueTags.map((e) => <li><a href={"/tags/"+e}>{e}</a></li>)}
  </ul>
  <div>
    <p>&copy; 2024 Renato Sanchez. All rights reserved.</p>
  </div>
</footer>

<style>
  footer {
    font-family: "Inter", "Courier New", Courier, monospace;
    flex-direction: column;
    display: flex;
    gap: 0.5em;
    margin: 1em 0.5em;
    padding-bottom: 20em;
  }
  div {
    margin: auto 0 auto auto;
  }
  ul {
    display: flex;
    margin: auto 0 auto auto;
    text-decoration: none;
    list-style: none;
    gap: 0.5em;
  }
  li {
    background: var(--select-bg-color);
    padding: 0.5em;
  }
  li:hover {
    cursor: pointer;
    text-decoration: underline;
  }
</style>
