---
import MyTags from "../components/MyTags.astro";
import Navbar from "../components/Navbar.astro";

function onlyDateForm(date:number){
  var newDate = new Date(date)
  return newDate.toDateString()
}

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <link rel="stylesheet" href="./src/layouts/normalize.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.15.1/dist/katex.css" integrity="sha384-WsHMgfkABRyG494OmuiNmkAOk8nhO1qE+Y6wns6v+EoNoTNxrWxYpl5ZYWFOLPCM" crossorigin="anonymous">
    <link rel="icon" href="/icon.svg">
    <title>rip.rtx</title>
  </head>
  <body>
    <div id="main-section">
      <Navbar title="rip.rtx" />
      <div class="info_blog">
        <h1 class="title_blog">{Astro.props.frontmatter.title}</h1>
        <div>
          <p class="author_blog">by {Astro.props.frontmatter.author}</p>
          <p class="date_blog">{onlyDateForm(Astro.props.frontmatter.date)}</p>
        </div>
      </div>
      <section>
        <slot />
      </section>
      <MyTags />
    </div>
  </body>
  <script
    src="https://kit.fontawesome.com/aa86d54169.js"
    crossorigin="anonymous"></script>
</html>

<style is:global>
  @supports (font-variation-settings: normal) {
    :root {
      font-family: InterVariable, sans-serif;
    }
  }
  ::-webkit-scrollbar {
    display: none;
  }
  :root {
    font-family: Inter, sans-serif;
    font-feature-settings:
      "liga" 1,
      "calt" 1; /* fix for Chrome */
    --font-color: #000;
    --primary-color: #4e4e4e;
    --select-bg-color: #e7e7e7;
    --bg-color: #fff;
  }
  html {
    font-family: "Inter";
    background: var(--bg-color);
    color: var(--font-color);
  }
  code {
    user-select: text;
    font-family:
      "Fira Code",
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  pre {
    white-space: nowrap;
    overflow-x: scroll;
    padding: 1em;
    border-radius: 1em;
  }
  body {
    display: flex;
    flex-direction: column;
  }
  #main-section {
    margin: auto;
    padding-top: 6rem;
    width: 50em;
  }
  .info_blog {
    display: grid;
  }
  .info_blog h1 {
    margin-bottom: 0;
  }
  .info_blog div {
    display: flex;
  }

  .date_blog {
    font-style: italic;
  }
  ul {
    list-style: decimal;
  }
  a {
    text-decoration: none;
    color: var(--primary-color);
  }
  section {
    margin: auto;
    display: flex;
    flex-direction: column;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    margin: 0.5rem;
    text-wrap: pretty;
  }
  p {
  }
  h1 {
    font-size: 2rem;
  }
  h2 {
    font-size: 1.5rem;
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: scale-down;
  }
  @media screen and (max-width: 800px) {
    #main-section {
      margin: auto;
      padding: 0.3rem;
      width: 100%;
    }
  }
</style>
