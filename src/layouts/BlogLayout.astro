---
import MyTags from "../components/MyTags.astro";
import Navbar from "../components/Navbar.astro";

function onlyDateForm(date:number){
  var newDate = new Date(date)
  return newDate.toDateString()
}
const {frontmatter} = Astro.props
const {title,date,tags} = frontmatter
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <link rel="stylesheet" href="/normalize.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.15.1/dist/katex.css" integrity="sha384-WsHMgfkABRyG494OmuiNmkAOk8nhO1qE+Y6wns6v+EoNoTNxrWxYpl5ZYWFOLPCM" crossorigin="anonymous">
    <link rel="icon" href="/icon.svg">
    <title>rip.rtx</title>
  </head>
  <body>
    <div id="main-section">
      <Navbar title="rip.rtx" />
      <div class="info_blog">
        <h1 class="title_blog">{Astro.props.frontmatter.title}</h1>
        <div class="creditsAndTags">
          <p class="author_blog">by {Astro.props.frontmatter.author}</p>
          <p class="date_blog">{onlyDateForm(Astro.props.frontmatter.date)}</p>
        </div>
      </div>
      <section>
        <slot />
      </section>
      <MyTags />
    </div>
  </body>
  <script
    src="https://kit.fontawesome.com/aa86d54169.js"
    crossorigin="anonymous"></script>
</html>

<style is:global>
  ::-webkit-scrollbar {
    display: none;
  }
  :root {
    font-feature-settings:
      "liga" 1,
      "calt" 1; /* fix for Chrome */
    --font-color: #000;
    --primary-color: #4e4e4e;
    --select-bg-color: #e7e7e7;
    --bg-color: #fff;
  }
  html {
    font-family: 'Courier New', monospace;
    line-height: 1.5;
    background: var(--bg-color);
    color: var(--font-color);
  }
  code {
    user-select: text;
    font-family:
      'Courier New',
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  pre {
    white-space: nowrap;
    overflow-x: scroll;
    padding: 0.5rem;
    border-radius: 0.5rem;
  }
  body {
    display: flex;
    flex-direction: column;
  }
  #main-section {
    margin: auto;
    padding-top: 6rem;
    max-width: 600px;
  }
  .info_blog {
    display: flex;
    flex-direction: column;
  }
  .info_blog h1 {
    margin-bottom: 0;
    font-family: InterVariable,Arial, Helvetica, sans-serif;
  }
  .info_blog div {
    display: flex;
  }

  .date_blog {
    font-style: italic;
  }
  .info_blog ul {
    list-style: none;
    padding: 0 8px;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1rem;
    margin:0;
  }
  .info_blog a{
    background: var(--select-bg-color);
    margin: 0.5rem 0 ;
    padding: 0.3rem;
    border-radius: 8px;
  }
  .creditsAndTags{
    display: flex;
  }
  .creditsAndTags *{
    margin: 0.5rem;
  }
  a {
    text-decoration: none;
    word-wrap: break-word;
    color: #00aeff;
  }
  section {
    margin: auto;
    display: flex;
    flex-direction: column;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    margin:0.5rem;
    text-wrap: pretty;
    word-wrap: break-word;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6{
    font-family: InterVariable,Arial, Helvetica, sans-serif;
    
  }
  h1 {
    font-size: 2rem;
  }
  h2 {
    font-size: 1.5rem;
  }
  img {
    width: 100%;
    height: 100%;
    object-fit: scale-down;
  }
  ul,ol{
    margin:0.3rem;
    padding:0 2rem;
  }
  summary{
  margin:0.5rem;text-wrap: balance;
  }
  ol ol{
  padding:0.3rem;
  }
  @media screen and (max-width: 800px) {
    #main-section {
      margin: auto;
      padding: 0.3rem;
      width: 100%;
    }
  }
</style>
